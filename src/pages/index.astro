---
import { SITE_TITLE, SITE_TAGLINE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import Ava from "@src/assets/img/ava.jpg";
import Prose from "../components/Prose.astro";
import { projects } from "./projects/projects";
import ProjectList from "../components/ProjectList.astro";
import PostItem from "../components/PostItem.astro";

type BlogPost = CollectionEntry<"blog">;

const top6Projects = projects.slice(0, 6);
const posts = (await getCollection("blog"))
  .sort(
    (a: BlogPost, b: BlogPost) =>
      b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
  )
  .slice(0, 5);
---

<BaseLayout
  title={SITE_TITLE + " | " + SITE_TAGLINE}
  description={SITE_DESCRIPTION}
>
  <div class="container">
    <div class="w-full md:flex md:items-center gap-16 mb-10">
      <div class="text-pretty leading-9">
        <h1 class="text-4xl font-bold mb-4">Hi There üëã, Daniel Here!</h1>
        <Prose>
          <div class="text-lg">
            <span>
              I am a software developer specializing in <span class="font-bold"
                >back-end technologies</span
              >. Passionate about coding and driven by curiosity, I am
              constantly seeking to refine my skills, learn new technologies,
              and grow as a developer every day. My focus is on designing robust
              architectures, perfecting my existing expertise, writing clean,
              maintainable code, and ensuring quality through thorough testing.
            </span>
            <!-- <p>
							I have also worked as a freelancer developing and maintaining web pages and applications. If you are interested, don‚Äôt
							hesitate to contact me ‚úâÔ∏è.
						</p> -->
            <p>
              Currently, I am expanding my expertise by learning <span
                class="font-bold">blockchain development</span
              > with Solidity and Web3. Exploring this cutting-edge technology allows
              me to grow as a developer and opens doors to building decentralized
              applications and contributing to the future of the web.
            </p>
          </div>
        </Prose>
      </div>
      <Image
        src={Ava}
        alt="Muhammad Syakirurohman"
        width={300}
        loading="eager"
        class="rounded-3xl rotate-3 mx-4 md:mx-0"
      />
    </div>
    <main>
      <div class="mt-6 mb-12">
        <div
          class="flex justify-between gap-2 border-b mb-1 dark:border-b-zinc-700"
        >
          <h2 class="text-lg font-bold mb-3">Recent Posts</h2>
          <a
            href="/posts/"
            class="inline-block py-2 underline dark:prose-invert"
            >All posts &raquo;</a
          >
        </div>
        <div>
          {posts.map((post: BlogPost) => <PostItem post={post} />)}
        </div>
        <div class="text-right"></div>
      </div>
      <div>
        <div class="flex justify-between gap-2 mb-1">
          <h2 class="text-lg font-bold mb-3">My Projects</h2>
          <a
            href="/projects/"
            class="inline-block py-2 underline dark:prose-invert"
            >All projects &raquo;</a
          >
        </div>
        <ProjectList projects={top6Projects} />
      </div>
    </main>
  </div>
</BaseLayout>
