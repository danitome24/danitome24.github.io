---
import { Image } from "astro:assets";
import { SITE_TITLE, SITE_TAGLINE, SITE_DESCRIPTION } from "../consts";
import BaseLayout from "@layouts/BaseLayout.astro";
import Ava from "@assets/img/ava.jpg";
import Prose from "@components/Prose.astro";
import { projects } from "@pages/projects/projects";
import ProjectList from "@components/ProjectList.astro";
import PostList from "@components/PostList.astro";

const top6Projects = projects.slice(0, 6);

---

<BaseLayout
  title={SITE_TITLE + " | " + SITE_TAGLINE}
  description={SITE_DESCRIPTION}
>
  <div class="container">
    <div class="w-full md:flex md:items-center gap-16 mb-10">
      <div class="text-pretty leading-9">
        <h1 class="text-4xl font-bold mb-4">Hi There ðŸ‘‹, Daniel Here!</h1>
        <Prose>
          <div class="text-lg">
            <span>
              I am a software developer specializing in back-end technologies.
              <span class="font-bold">Passionate</span> about coding and driven by
              <span class="font-bold">curiosity</span>, I am constantly seeking
              to refine my skills, learn new technologies, and grow as a
              developer every day.
            </span>
            <p>
              Currently, I am expanding my expertise by learning blockchain
              development with <span class="font-bold">Solidity</span> and <span
                class="font-bold">Web3</span
              >. Exploring this cutting-edge technology allows me to grow as a
              developer and opens doors to building decentralized applications
              and contributing to the future of the web.
            </p>
          </div>
        </Prose>
      </div>
      <Image
        src={Ava}
        alt="Muhammad Syakirurohman"
        width={300}
        loading="eager"
        class="rounded-3xl rotate-3 mx-4 md:mx-0"
      />
    </div>
    <main>
      <section class="py-6">
        <div class="flex justify-between gap-2 mb-1">
          <h2 class="text-lg font-bold mb-3">My Projects</h2>
          <a
            href="/projects/"
            class="inline-block py-2 underline dark:prose-invert"
            >All projects &raquo;</a
          >
        </div>
        <ProjectList projects={top6Projects} />
      </section>
      <section class="py-6">
        <div
          class="flex justify-between gap-2 border-b mb-1 dark:border-b-zinc-700"
        >
          <h2 class="text-lg font-bold mb-3">Recent Posts</h2>
          <a
            href="/posts/"
            class="inline-block py-2 underline dark:prose-invert"
            >All posts &raquo;</a
          >
        </div>
        <PostList />
      </section>
    </main>
  </div>
</BaseLayout>
